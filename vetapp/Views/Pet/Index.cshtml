@model IEnumerable<Pet>

<h2>Pets</h2>
<table class="table">
    <tr>
        <th>Pet ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Type</th>
    </tr>

    @foreach (var pet in @Model)
    {
        <tr>
            <td><a href=/Pet/ViewPet/@pet.idpet>@pet.idpet</a></td>
            <td><a href=/Pet/ViewPet/@pet.idpet>@pet.pet_first_name @pet.pet_last_name</a></td>
            <td>@pet.pet_last_name</td>
            <td>@pet.pet_type</td>
        </tr>
    }

</table>