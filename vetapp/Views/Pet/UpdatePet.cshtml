@model Pet

<h2>Update @Model.pet_first_name @Model.pet_last_name</h2>

@using (Html.BeginForm("UpdatePetToDatabase", "Pet", "Post"))
{
    <input asp-for="idpet" type="hidden" value="@Model.idpet" />

    <label asp-for="pet_first_name" class="control-label">First Name</label>
    <input type="text" name="name" class="form-control" value="@Model.pet_first_name" />

    <label asp-for="pet_last_name" class="control-label">Last Name</label>
    <input type="text" step="0.01" name="surname" class="form-control" value="@Model.pet_last_name" />

    <label asp-for="pet_type" class="control-label">Type</label>
    <input type="text" step="0.01" name="type" class="form-control" value="@Model.pet_type" />

    <input type="submit" value="Update Pet" class="btn btn-primary" />
}